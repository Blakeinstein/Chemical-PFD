    border-width: 0px 0px 2px 0px;
    padding-bottom: 3px;
    margin-bottom: 3px;
    margin-top: 10px;
    text-align: left;
    font-size: 20px;
    color: gray;
}

sectionLabel:first{
    margin-top: 0px;
}

